{% extends 'base.html.twig' %}

{% block title %}Detalles de la Incidencia - {{ incidencia.titulo }}{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
		<div class="container">
			<a class="navbar-brand" href="#">Servicio Tecnico</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" href="{{ path('verTodosLosClientes') }}">Clientes</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('verTodosLasIncidencias') }}">Incidencias</a>
					</li>
				</ul>
				<ul class="navbar-nav">
					{% if app.user %}
						<li class="nav-item mx-5">
							<span class="navbar-text">{{ app.user.nombre }}</span>
						</li>
						<li class="nav-item">
							<a class=" btn btn-danger" href="{{ path('app_logout') }}">Cerrar sesión</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Detalles de la Incidencia - {{ incidencia.titulo }}</h1>

                        <dl class="row">
                            <dt class="col-sm-4">Título:</dt>
                            <dd class="col-sm-8">{{ incidencia.titulo }}</dd>
                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">{{ incidencia.estado }}</dd>
                            <dt class="col-sm-4">Fecha de Creación:</dt>
                            <dd class="col-sm-8">{{ incidencia.fechaCreacion|date('Y-m-d H:i:s') }}</dd>
                            <dt class="col-sm-4">Nombre del Cliente:</dt>
                            <dd class="col-sm-8">{{ incidencia.cliente.nombre }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}